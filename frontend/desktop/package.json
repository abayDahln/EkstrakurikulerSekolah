{
  "name": "ekstrakurikuler-desktop",
  "productName": "Ekstrakurikuler Sekolah",
  "private": true,
  "version": "1.0.0",
  "type": "module",

  "main": "electron/main.cjs",

  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "desktop": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },

  "dependencies": {
    "@primeuix/themes": "^2.0.3",
    "@tailwindcss/vite": "^4.1.18",
    "primeicons": "^7.0.0",
    "primevue": "^4.5.4",
    "tailwindcss": "^4.1.18",
    "vue": "^3.5.24",
    "vue-router": "^4.6.4"
  },

  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "vite": "^7.2.4",
    "electron": "^40.1.0",
    "electron-builder": "^24.13.3"
  },

  "build": {
    "appId": "com.sekolah.ekstrakurikuler",
    "asar": true,
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
